{# components/backgroundVideo.twig #}
{% set videoUrl = block.componentUrl ?? '' %}
{% if videoUrl %}
  {# make the column a positioned container #}
  <style>
    #column-{{ block.parent.id }} {
      position: relative;
      overflow: hidden;
    }
    /* absolutely-position the <video> behind all other column content */
    #video-bg-{{ block.id }} {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }
  </style>

  <video
    id="video-bg-{{ block.id }}"
    autoplay
    muted
    loop
    playsinline
  >
    <source src="{{ videoUrl }}" type="video/mp4">
    Your browser doesnâ€™t support HTML5 video.
  </video>
{% endif %}
